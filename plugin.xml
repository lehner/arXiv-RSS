<?xml version="1.0" ?>
<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 1.0" "http://jpf.sourceforge.net/plugin_1_0.dtd">
<plugin id="arxivrss" version="0.5">
  
  <requires>
    <import plugin-id="net.sf.jabref.core"/>
  </requires>
  
  <!-- Will load code and resources from the home folder -->
  <runtime>
    <library type="code" path="./" id="code"/>
    <library type="resources" path="./" id="resouces"/>
  </runtime>
  
  <extension id="ArxivRssPane" plugin-id="net.sf.jabref.core"
	     point-id="SidePanePlugin">
    <parameter id="sidePanePlugin"
	       value="arxivrss.ArxivRssPane" />
    <parameter id="name" value="arXiv rss pane" />
    <parameter id="description"
	       value="Browse and import new preprints." />
  </extension>
  
</plugin>
